<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.sms" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/g600</item>
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="colorPrimaryDark">@color/g800</item>
        <item name="colorAccent">@color/white</item>

    </style>


    <style name="NoActionBar" parent="Theme.sms">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FullScreen" parent="Theme.sms">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>